<div class="Auth-container">
    <h1>Search it, Buy it!</h1>
    <main>
        <aside>
            <form action="/register" method="POST">
                <input class="fieldInput" name="username" placeholder="Username..." value="{{ uName }}"></input>
                <input class="fieldInput" name="emailRegister" placeholder="Email..." value="{{ email }}"></input>
                <input class="fieldInput" name="passwordRegister" type="password" placeholder="Password..."></input>

                <button class="blueButton">Sign Up</button>
            </form>
        </aside>

        <aside>
            <form action="/login" method="POST">
                <input class="fieldInput" name="emailLogin" placeholder="Username..." value="{{ email }}"></input>
                <input class="fieldInput" type="password" name="passwordLogin" placeholder="Password..."></input>
                <button class="whiteButton">Login</button>
            </form>
        </aside>
    </main>
</div>

<script src="js/cookie.js" type="text/javascript"></script>