<h1>Search it, Buy it!</h1>
<div class="forms">
    <form action="/register" method="POST">

        <div class="errors">
            {{#each messages}}
            <p>{{this}}</p>
            {{/each}}
        </div>


        <label for="form-username">
            Username
        </label>
        <input class="form-input" type="text" id="form-username-register" name="username" placeholder="Username"
            autocomplete="off" value="{{ uName }}" />

        <label for="form-email">
            Email
        </label>
        <input {{!-- type="email"  // Commented for assignment purposes --}} type="text" id="form-email"
            name="emailRegister" class="form-input" placeholder="Email" autocomplete="off" value="{{ email }}" />
        <label for="form-password">
            Password
        </label>
        <input class="form-input" id="form-password-register" type="password" name="passwordRegister"
            placeholder="Password" {{!-- autocomplete="off" --}} />


        <input class="form-button" id="form-submit" type="submit" value="SIGN UP" />
    </form>

    <form action="/login" method="POST">

        <div class="errors">
            {{#each messages}}
            <p>{{this}}</p>
            {{/each}}
        </div>

        <label for="form-email">
            Email
        </label>
        <input class="form-input" type="text" id="form-email-login" name="emailLogin" placeholder="Email"
            autocomplete="off" value="{{ email }}" />
        <label for="form-password">
            Password
        </label>
        <input class="form-input" id="form-password-login" type="password" name="passwordLogin"
            placeholder="Password" />

        <input class="form-button" id="login-button" type="submit" value="LOGIN" />
    </form>
</div>

<script src="js/cookie.js" type="text/javascript"></script>
<script src="js/loc.js" type="text/javascript"></script>